# FamilyShare local environment
# Copy this file to .env and edit as needed before running locally.

# Address server listens on
SERVER_ADDR=:8080

# Path to SQLite database file
DATABASE_PATH=./data/familyshare.db

# Base directory for stored photos and derived assets
DATA_DIR=./data

# Output image format (webp|avif)
IMAGE_FORMAT=webp

# Temporary upload directory (optional, janitor will clean this)
TEMP_UPLOAD_DIR=./tmp_uploads

# Admin password for local testing (store hashed in production)
ADMIN_PASSWORD_HASH=""

# App environment (development|production)
APP_ENV=development

# Debug logging (verbose template logs)
DEBUG=false

# Viewer hash secret for share link view counting (HMAC key)
VIEWER_HASH_SECRET=

# Require viewer hash secret (defaults to true in production)
VIEWER_HASH_SECRET_REQUIRED=false

# Force HTTPS cookie flags when behind TLS-terminating proxy
FORCE_HTTPS=false

# Cookie SameSite policy (Lax|Strict|None)
COOKIE_SAMESITE=Lax

# Rate limiting (requests per minute)
RATE_LIMIT_SHARE=60
RATE_LIMIT_ADMIN=10

# Trusted proxy CIDRs for honoring forwarded headers
# Example: 127.0.0.1/32, ::1/128, 10.0.0.0/8
TRUSTED_PROXY_CIDRS=

# Janitor interval (e.g. 6h, 30m)
JANITOR_INTERVAL=6h

# Caddy (reverse proxy)
DOMAIN=familyshare.example.com
ACME_EMAIL=admin@example.com
